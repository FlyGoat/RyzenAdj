#!/usr/bin/make -f

BUILDDIR = build_dir

export DH_ALWAYS_EXCLUDE=build:win32

# secondly called by launchpad
build:
	mkdir $(BUILDDIR);
	cd $(BUILDDIR); cmake -DCMAKE_INSTALL_PREFIX=../debian/tmp/usr ..
	make -C $(BUILDDIR)
	pandoc -s -f markdown -t man README.md -o manpage.1

build-arch:
	# nothing to do, but required

build-indep:
	# nothing to do, but required 

# thirdly called by launchpad
binary: build binary-indep binary-arch

binary-indep:
	# nothing to be done

binary-arch:
	cd $(BUILDDIR); cmake -P cmake_install.cmake
	mkdir debian/tmp/DEBIAN
	dpkg-gencontrol -pryzenadj
	dpkg --build debian/tmp ..

# firstly called by launchpad
clean:
	rm -f build
	rm -rf $(BUILDDIR)

.PHONY: binary binary-arch binary-indep clean
